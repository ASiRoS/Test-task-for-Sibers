{% extends 'layouts/app.html.twig' %}

{% block content %}
<div class="container">
	<table>
		<tr>
			<td>Username:</td>
			<td>{{ user.login}}</td>
		</tr>
		<tr>
			<td>Name:</td>
			<td>{{ user.name }}</td>
		</tr>
		<tr>
			<td>Last name:</td>
			<td>{{ user.lastname }}</td>
		</tr>
		<tr>
			<td>Gender:</td>
			{% if user.gender == isMale %}    <td>Male</td>   {% endif %}
			{% if user.gender == isFemale %}  <td>Female</td> {% endif %}
		</tr>
		<tr>
			<td>Birthday:</td>
			<td>{{ user.birthday | date('Y-m-d') }}</td>
		</tr>
		<tr>
			<td>Registration date: </td>
			<td>{{ user.registration_date }}</td>
		</tr>
		<tr>
			<td>User's description:</td>
			<td>{{ user.description }}</td>
		</tr>
		<tr>
			<td>User's avatar:</td>
			<td><img src="{{ user.avatar }}" alt="User's avatar" width="200" height="200"></td>
		</tr>
		<tr>
			<td><a href="/users/edit/{{ user.id }}">Edit user</a></td>
			<td><a href="/users/delete/{{ user.id }}">Delete user</a></td>
		</tr>
	</table>
</div>
{% endblock %}