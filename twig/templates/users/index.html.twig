{% extends "layouts/app.html.twig" %}

{% block content %}
	<div class="row mb-2">
		{% for user in users %}
		<div class="col-md-6">
		  <div class="card flex-md-row mb-4 shadow-sm h-md-250">
		    <div class="card-body d-flex flex-column align-items-start">
		      <h3 class="mb-0">
		        <a class="text-dark" href="/users/{{ user.id }}">
		        	{{ user.login }}
		        </a>
		      </h3>
		      <div class="mb-1 text-muted">{{ user.registration_date }}</div>
		      <p class="card-text mb-auto">{{ user.description }}</p>
		      <a href="users/{{ user.id }}">Continue reading</a>
		    </div>
		    <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" style="width: 200px; height: 250px;" src="{{ user.avatar }}" data-holder-rendered="true">
		  </div>
		</div>
		{% endfor %}
	</div>
{% endblock %}

